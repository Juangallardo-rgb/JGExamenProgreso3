<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:JGExamenProgreso3.Properties.JGViewModel"
             x:Class="JGExamenProgreso3.JGBooksDetails"
             Title="JGBooksDetails">

    <VerticalStackLayout Padding="10">
        <Image Source="{Binding Book.Thumbnail}" HeightRequest="200" Aspect="AspectFill" />
        <Label Text="{Binding Book.Title}" FontAttributes="Bold" FontSize="24" />
        <Label Text="{Binding Book.Authors}" FontSize="18" />
    </VerticalStackLayout>
</ContentPage>